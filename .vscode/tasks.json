{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Backend",
      "type": "shell",
      "command": "yarn workspace backend run watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "build"
      }
    },
    {
      "label": "Watch Shared",
      "type": "shell",
      "command": "yarn workspace @suiteworks/suitetools-shared run watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "build"
      }
    }
  ]
}
