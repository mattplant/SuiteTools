// tsconfig.base.json
{
  "compilerOptions": {
    /* Language & Module Settings */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Type System Behavior */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Interop & Compatibility */
    "isolatedModules": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,

    /* Path Aliases */
    "baseUrl": "."
  }
}
