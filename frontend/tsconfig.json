// frontend workspace tsconfig.json
{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Language and Syntax Support */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* File Handling & Modules */
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Type System Behavior */
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": false, // TODO: enable later after updating types with zod
    "types": ["vite/client"],
    "typeRoots": ["./node_modules", "./node_modules/@types"],

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Monorepo Support */
    "composite": true
  },
  "include": ["src", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "../shared" }]

  // TODO: cleanup of settings. remove thos redundant since extends "../tsconfig.base.json" and also look into if I need the following in the references section: "path": "./tsconfig.node.json"
}
