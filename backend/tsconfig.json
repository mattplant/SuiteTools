// backend workspace tsconfig.json
// Self-contained config for type checking only (--noEmit)
{
  "compilerOptions": {
    /* Language & Module Settings */
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Type System - Gradually increasing strictness */
    "strict": false, // TODO: Enable after fixing existing type issues
    "noImplicitAny": false, // TODO: Enable after adding proper types
    "strictNullChecks": false, // TODO: Enable after null handling fixes
    "noUnusedLocals": false, // TODO: Re-enable after cleanup
    "noUnusedParameters": false, // TODO: Re-enable after cleanup

    /* Module Resolution & Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",

    /* NetSuite-Specific */
    "experimentalDecorators": true,
    "paths": {
      "N": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N"],
      "N/*": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
