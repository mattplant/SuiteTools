// backend workspace tsconfig.json
{
  // "extends": "../tsconfig.base.json", // TODO:  use this later after verifying that we can override for NetSuite
  "extends": "../tsconfig.json",

  "compilerOptions": {
    /* Language and Syntax */
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    "experimentalDecorators": true,
    "esModuleInterop": true,

    /* Module System */
    "module": "amd",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "N": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N"],
      "N/*": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N/*"]
    },

    /* Output Settings */
    "outDir": "./src/FileCabinet/SuiteScripts/SuiteTools",
    "sourceMap": false,
    "newLine": "LF",

    /* Linting */
    "noUnusedLocals": true
  },
  "include": ["."],
  "exclude": ["node_modules"]
}
