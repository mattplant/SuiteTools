// backend workspace tsconfig.json
{
  // "extends": "../tsconfig.base.json", // TODO:  use this later after verifying that we can override for NetSuite
  "extends": "../tsconfig.json",

  "compilerOptions": {
    /* Language and Syntax */
    "target": "ESNext",
    "lib": ["ESNext", "dom"],
    // "lib": ["ESNext"],                // TODO: drop "dom" for backend
    "experimentalDecorators": true,
    "esModuleInterop": true,

    /* Module System */
    "module": "amd",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "N": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N"],
      "N/*": ["../.yarn/unplugged/@hitc-netsuite-types-npm-2024.2.12-ea6370726c/node_modules/@hitc/netsuite-types/N/*"],
      "SuiteScripts/SuiteTools/idev-suitetools-shared": ["../shared/dist/index.d.ts"] // NetSuiteâ€‘safe module path
    },

    /* Output Settings */
    "outDir": "./src/FileCabinet/SuiteScripts/SuiteTools", // NetSuite's SDF path for deployment
    "declaration": false,
    "sourceMap": false,
    "newLine": "LF",

    /* Linting */
    "noUnusedLocals": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
