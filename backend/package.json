{
  "name": "backend",
  "displayName": "SuiteTools Backend",
  "description": "The backend service for the missing NetSuite tools.",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "author": {
    "name": "Matthew Plant",
    "url": "https://github.com/mattplant"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattplant/SuiteTools",
    "directory": "backend"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "deploy": "suitecloud project:deploy",
    "build": "yarn tsc",
    "validate": "suitecloud project:validate",
    "watch": "tsc --watch",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "clean-local": "rm -rf dist",
    "test": "jest",
    "format": "prettier --write ./src"
  },
  "dependencies": {
    "@suiteworks/suitetools-shared": "workspace:*"
  },
  "devDependencies": {
    "@hitc/netsuite-types": "2024.2.12",
    "@oracle/suitecloud-unit-testing": "^1.6.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "*",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-suitescript": "^1.3.2",
    "jest": "^29.7.0",
    "prettier": "2.8.8",
    "typescript": "5.7.3",
    "zod": "^3.23.8"
  },
  "packageManager": "yarn@4.9.2"
