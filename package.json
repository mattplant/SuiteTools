{
    "name": "suitetools",
    "displayName": "SuiteTools monorepo",
    "description": "The monorepo for SuiteTools",
    "version": "1.0.0-beta.1",
    "author": {
        "name": "Matt Plant",
        "url": "https://github.com/mattplant"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mattplant/SuiteTools"
    },
    "homepage": "https://github.com/mattplant/SuiteTools#readme",
    "license": "GPL-3.0",
    "scripts": {
        "sdf-account-setup": "cd backend && suitecloud account:setup",
        "watch:backend": "yarn workspace backend run watch",
        "postinstall": "echo '✅ Reminder: In VS Code, open Command Palette → TypeScript: Select TypeScript Version → Use Workspace Version'",
        "clean": "yarn workspaces foreach -Apt run clean-local && yarn cache clean && find . -name '*.tsbuildinfo' -delete"
    },
    "private": true,
    "workspaces": [
        ".",
        "frontend",
        "backend",
        "shared/validation"
    ],
    "dependencies": {
        "typescript": "5.7.3"
    },
    "dependenciesMeta": {
        "@hitc/netsuite-types@2024.2.12": {
            "unplugged": true
        }
    },
    "devDependencies": {
        "eslint": "^9.32.0",
        "prettier": "2.8.8",
        "zod": "^4.0.13"
    },
    "resolutions": {
        "zod": "^4.0.13"
    }
}
